@model WelfareLotteryWebsite.Models.SelectRoleEditorViewModel
<tr>
    <td style="text-align:center">

        @if ("add" == ViewBag.Opt)
        {
            @(Model.Selected ? Html.CheckBoxFor(model => model.Selected, new {disabled = "true"}) : Html.CheckBoxFor(model => model.Selected))
        }
        else if ("del" == ViewBag.Opt)
        {
            @(Model.Selected ? Html.CheckBoxFor(model => model.Selected, Model.RoleName == "Member" ? new {disabled = "true"} : null) : Html.CheckBoxFor(model => model.Selected, new {disabled = "true"}))
        }
    </td>
    <td>
        @Html.HiddenFor(model => model.RoleName) @*不添加这行只用下面这个显示 现在在后台不能获取值?????*@
        @Html.DisplayFor(model => model.RoleName)
    </td>
</tr>